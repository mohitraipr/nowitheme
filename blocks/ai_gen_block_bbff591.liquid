{% doc %}
  @prompt
    create a marquee with new arrivals just drooped shop before they are gone
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    padding-right: {{ block.settings.item_spacing }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-marquee-separator-{{ ai_gen_id }} {
    display: inline-block;
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-track-{{ ai_gen_id }} {
    animation-play-state: {% if block.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
    
    .ai-marquee-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-marquee-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      <div class="ai-marquee-content-{{ ai_gen_id }}">
        <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
        <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
        <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      </div>
    {% endfor %}
  </div>
</div>

