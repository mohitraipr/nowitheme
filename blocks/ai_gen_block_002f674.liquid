{% doc %}
  @prompt
    SEO text
    
    A short 2–3 line paragraph with natural keywords (“women’s denim, co-ord sets, office trousers”).
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-seo-text-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-seo-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-seo-text-content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px;
  }

  .ai-seo-text-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-seo-text-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-seo-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-seo-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.seo_content != blank %}
    <div class="ai-seo-text-content-{{ ai_gen_id }}">
      {{ block.settings.seo_content }}
    </div>
  {% endif %}
</div>

