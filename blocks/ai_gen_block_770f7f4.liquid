{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-trending-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-trending-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.3;
    text-align: {{ block.settings.title_alignment }};
    letter-spacing: 0px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 700;
    text-transform: uppercase;
  }

  .ai-trending-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-trending-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-trending-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-trending-link-{{ ai_gen_id }} {
    display: block;
    position: relative;
    text-decoration: none;
    overflow: hidden;
  }

  .ai-trending-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-trending-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-trending-link-{{ ai_gen_id }}:hover .ai-trending-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-trending-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 100%);
  }

  .ai-trending-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_title_color }};
    font-size: {{ block.settings.item_title_size }}px;
    text-align: {{ block.settings.item_title_alignment }};
    letter-spacing: 0px;
    margin: 0;
    font-weight: 700;
    text-transform: uppercase;
  }

  .ai-trending-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-trending-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-trending-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  @media screen and (max-width: 989px) {
    .ai-trending-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-trending-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-trending-item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.item_title_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-trending-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-trending-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.75 }}px;
    }

    .ai-trending-item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.item_title_size | times: 0.85 }}px;
    }

    .ai-trending-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-trending-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-trending-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <h2 class="ai-trending-title-{{ ai_gen_id }}">
        {{ block.settings.section_title }}
      </h2>
    {% endif %}

    <div class="ai-trending-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign show_key = 'show_item_' | append: i
          assign collection_key = 'collection_' | append: i
          assign title_key = 'item_title_' | append: i
          assign image_key = 'item_image_' | append: i
          
          assign show_item = block.settings[show_key]
          assign collection = block.settings[collection_key]
          assign item_title = block.settings[title_key]
          assign item_image = block.settings[image_key]
        %}

        {% if show_item %}
          <div class="ai-trending-item-{{ ai_gen_id }}">
            {% if collection != blank %}
              <a 
                href="{{ collection.url }}" 
                class="ai-trending-link-{{ ai_gen_id }}"
                aria-label="{{ item_title | default: collection.title }}"
              >
                <div class="ai-trending-image-wrapper-{{ ai_gen_id }}">
                  {% if item_image != blank %}
                    <img
                      src="{{ item_image | image_url: width: 800 }}"
                      alt="{{ item_title | default: collection.title | escape }}"
                      class="ai-trending-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="1000"
                    >
                  {% elsif collection.image %}
                    <img
                      src="{{ collection.image | image_url: width: 800 }}"
                      alt="{{ item_title | default: collection.title | escape }}"
                      class="ai-trending-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="1000"
                    >
                  {% else %}
                    <div class="ai-trending-placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-trending-content-{{ ai_gen_id }}">
                  <h3 class="ai-trending-item-title-{{ ai_gen_id }}">
                    {{ item_title | default: collection.title }}
                  </h3>
                </div>
              </a>
            {% else %}
              <div class="ai-trending-link-{{ ai_gen_id }}">
                <div class="ai-trending-image-wrapper-{{ ai_gen_id }}">
                  {% if item_image != blank %}
                    <img
                      src="{{ item_image | image_url: width: 800 }}"
                      alt="{{ item_title | escape }}"
                      class="ai-trending-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="1000"
                    >
                  {% else %}
                    <div class="ai-trending-placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  <div class="ai-trending-empty-state-{{ ai_gen_id }}">
                    Next, select a collection
                  </div>
                </div>
                {% if item_title != blank %}
                  <div class="ai-trending-content-{{ ai_gen_id }}">
                    <h3 class="ai-trending-item-title-{{ ai_gen_id }}">
                      {{ item_title }}
                    </h3>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

