{% doc %}
  @prompt
    Email signup
    
    Copy: “Get ₹150 off your first order”. Only Email field—keep friction low.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-email-signup-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-email-signup-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.spacing }}px 0;
    line-height: 1.2;
  }

  .ai-email-signup-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.form_gap }}px;
    align-items: stretch;
    max-width: 100%;
  }

  .ai-email-signup-input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    min-width: 0;
  }

  .ai-email-signup-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-email-signup-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background_color }};
    outline-offset: 2px;
    border-color: {{ block.settings.button_background_color }};
  }

  .ai-email-signup-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-email-signup-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-email-signup-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background_color }};
    outline-offset: 2px;
  }

  .ai-email-signup-messages-{{ ai_gen_id }} {
    margin-top: {{ block.settings.spacing }}px;
  }

  .ai-email-signup-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: {{ block.settings.message_font_size }}px;
    margin: 0;
  }

  .ai-email-signup-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: {{ block.settings.message_font_size }}px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-email-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-email-signup-form-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.form_gap | times: 0.75 }}px;
    }

    .ai-email-signup-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-email-signup-input-{{ ai_gen_id }},
    .ai-email-signup-button-{{ ai_gen_id }} {
      padding: {{ block.settings.input_padding | times: 0.9 }}px;
    }

    .ai-email-signup-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding | times: 0.9 }}px {{ block.settings.button_padding | times: 1.2 }}px;
    }
  }
{% endstyle %}

<div class="ai-email-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-email-signup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  {% form 'contact' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    
    <div class="ai-email-signup-form-{{ ai_gen_id }}">
      <input
        type="email"
        name="contact[email]"
        class="ai-email-signup-input-{{ ai_gen_id }}"
        value="{{ form.email }}"
        placeholder="{{ block.settings.email_placeholder }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          aria-invalid="true"
          aria-describedby="ai-email-signup-error-{{ ai_gen_id }}"
        {% endif %}
        {% if form.posted_successfully? %}
          aria-describedby="ai-email-signup-success-{{ ai_gen_id }}"
        {% endif %}
        required
      >
      <button
        type="submit"
        class="ai-email-signup-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </button>
    </div>

    <div class="ai-email-signup-messages-{{ ai_gen_id }}">
      {% if form.errors %}
        <p
          id="ai-email-signup-error-{{ ai_gen_id }}"
          class="ai-email-signup-error-{{ ai_gen_id }}"
        >
          {{ form.errors.messages.email }}
        </p>
      {% endif %}

      {% if form.posted_successfully? %}
        <p
          id="ai-email-signup-success-{{ ai_gen_id }}"
          class="ai-email-signup-success-{{ ai_gen_id }}"
        >
          {{ block.settings.success_message }}
        </p>
      {% endif %}
    </div>
  {% endform %}
</div>

