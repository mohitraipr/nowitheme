{% doc %}
  @prompt
    Best Sellers (Featured collection, Grid)
    
    Show rating and compare-at price for discounts.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-best-sellers-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-best-sellers-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-best-sellers-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-best-sellers-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
  }

  .ai-best-sellers-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-best-sellers-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.products_spacing }}px;
  }

  .ai-best-sellers-product-{{ ai_gen_id }} {
    position: relative;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-best-sellers-product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-best-sellers-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-best-sellers-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-best-sellers-product-{{ ai_gen_id }}:hover .ai-best-sellers-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-best-sellers-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-best-sellers-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-best-sellers-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background: {{ block.settings.sale_badge_color }};
    color: {{ block.settings.sale_badge_text_color }};
    padding: 4px 8px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-best-sellers-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.product_text_alignment }};
  }

  .ai-best-sellers-vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_size }}px;
    color: {{ block.settings.vendor_color }};
    margin: 0 0 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.7;
  }

  .ai-best-sellers-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-best-sellers-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-best-sellers-product-title-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-best-sellers-rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  {% if block.settings.product_text_alignment == 'center' %}
    .ai-best-sellers-rating-{{ ai_gen_id }} {
      justify-content: center;
    }
  {% elsif block.settings.product_text_alignment == 'right' %}
    .ai-best-sellers-rating-{{ ai_gen_id }} {
      justify-content: flex-end;
    }
  {% else %}
    .ai-best-sellers-rating-{{ ai_gen_id }} {
      justify-content: flex-start;
    }
  {% endif %}

  .ai-best-sellers-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-best-sellers-star-{{ ai_gen_id }} {
    width: 14px;
    height: 14px;
    color: {{ block.settings.star_color }};
  }

  .ai-best-sellers-star-empty-{{ ai_gen_id }} {
    color: {{ block.settings.star_empty_color }};
  }

  .ai-best-sellers-rating-count-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.rating_text_color }};
    opacity: 0.7;
  }

  .ai-best-sellers-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  {% if block.settings.product_text_alignment == 'center' %}
    .ai-best-sellers-price-wrapper-{{ ai_gen_id }} {
      justify-content: center;
    }
  {% elsif block.settings.product_text_alignment == 'right' %}
    .ai-best-sellers-price-wrapper-{{ ai_gen_id }} {
      justify-content: flex-end;
    }
  {% else %}
    .ai-best-sellers-price-wrapper-{{ ai_gen_id }} {
      justify-content: flex-start;
    }
  {% endif %}

  .ai-best-sellers-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-best-sellers-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-best-sellers-discount-{{ ai_gen_id }} {
    background: {{ block.settings.discount_badge_color }};
    color: {{ block.settings.discount_badge_text_color }};
    padding: 2px 6px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 11px;
    font-weight: 600;
  }

  .ai-best-sellers-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .ai-best-sellers-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-1px);
  }

  .ai-best-sellers-view-all-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.view_all_spacing }}px;
  }

  .ai-best-sellers-view-all-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background: transparent;
    color: {{ block.settings.view_all_color }};
    border: 2px solid {{ block.settings.view_all_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-best-sellers-view-all-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.view_all_color }};
    color: {{ block.settings.card_background }};
  }

  .ai-best-sellers-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.subheading_color }};
  }

  @media screen and (max-width: 990px) {
    .ai-best-sellers-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-best-sellers-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-best-sellers-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-best-sellers-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-best-sellers-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-best-sellers-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-best-sellers-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-best-sellers-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-best-sellers-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
      <div class="ai-best-sellers-grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-best-sellers-product-{{ ai_gen_id }}">
            <div class="ai-best-sellers-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-best-sellers-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-best-sellers-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if product.compare_at_price > product.price %}
                {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                <div class="ai-best-sellers-badge-{{ ai_gen_id }}">
                  -{{ discount_percentage }}%
                </div>
              {% endif %}
            </div>

            <div class="ai-best-sellers-content-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <p class="ai-best-sellers-vendor-{{ ai_gen_id }}">{{ product.vendor }}</p>
              {% endif %}

              <h3 class="ai-best-sellers-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              {% if block.settings.show_rating %}
                <div class="ai-best-sellers-rating-{{ ai_gen_id }}">
                  <div class="ai-best-sellers-stars-{{ ai_gen_id }}">
                    {% assign rating = 4.5 %}
                    {% assign full_stars = rating | floor %}
                    {% assign has_half_star = rating | modulo: 1 | round %}
                    {% assign empty_stars = 5 | minus: full_stars | minus: has_half_star %}

                    {% for i in (1..full_stars) %}
                      <svg class="ai-best-sellers-star-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endfor %}

                    {% if has_half_star == 1 %}
                      <svg class="ai-best-sellers-star-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor">
                        <defs>
                          <linearGradient id="half-{{ ai_gen_id }}-{{ forloop.index }}">
                            <stop offset="50%" stop-color="currentColor"/>
                            <stop offset="50%" stop-color="{{ block.settings.star_empty_color }}"/>
                          </linearGradient>
                        </defs>
                        <path fill="url(#half-{{ ai_gen_id }}-{{ forloop.index }})" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endif %}

                    {% for i in (1..empty_stars) %}
                      <svg class="ai-best-sellers-star-{{ ai_gen_id }} ai-best-sellers-star-empty-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endfor %}
                  </div>
                  <span class="ai-best-sellers-rating-count-{{ ai_gen_id }}">({{ rating }}) 127 reviews</span>
                </div>
              {% endif %}

              <div class="ai-best-sellers-price-wrapper-{{ ai_gen_id }}">
                <span class="ai-best-sellers-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-best-sellers-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                  <span class="ai-best-sellers-discount-{{ ai_gen_id }}">Save {{ discount_percentage }}%</span>
                {% endif %}
              </div>

              {% if block.settings.show_add_to_cart %}
                <a href="{{ product.url }}" class="ai-best-sellers-button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all and block.settings.collection.url %}
        <div class="ai-best-sellers-view-all-{{ ai_gen_id }}">
          <a href="{{ block.settings.collection.url }}" class="ai-best-sellers-view-all-link-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-best-sellers-empty-{{ ai_gen_id }}">
        <p>Please select a collection to display products.</p>
      </div>
    {% endif %}
  </div>
</div>

