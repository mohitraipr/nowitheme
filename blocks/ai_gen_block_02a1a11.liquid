    Shop by Category (Multicolumn with photos)
    
    Jeans, Trousers, Tops, Dresses, Plus.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-categories-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-shop-categories-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-shop-categories-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-shop-categories-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px;
    line-height: 1.2;
  }

  .ai-shop-categories-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-shop-categories-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  .ai-shop-category-card-{{ ai_gen_id }} {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: {{ block.settings.card_background_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-shop-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.5 }});
  }

  .ai-shop-category-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-shop-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-shop-category-card-{{ ai_gen_id }}:hover .ai-shop-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-shop-category-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-shop-category-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-shop-category-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%);
    display: flex;
    align-items: flex-end;
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-shop-category-content-{{ ai_gen_id }} {
    color: {{ block.settings.category_text_color }};
    text-align: {{ block.settings.category_text_alignment }};
    width: 100%;
  }

  .ai-shop-category-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_name_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.category_description_spacing }}px;
    line-height: 1.2;
  }

  .ai-shop-category-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_description_size }}px;
    margin: 0;
    opacity: 0.9;
    line-height: 1.3;
  }

  .ai-shop-category-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
  }

  @media screen and (max-width: 990px) {
    .ai-shop-categories-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-shop-categories-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-shop-categories-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-shop-category-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-shop-categories-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-shop-categories-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-categories-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-shop-categories-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-shop-categories-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-shop-categories-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-shop-categories-grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign category_enabled_key = 'category_' | append: i | append: '_enabled'
          assign category_name_key = 'category_' | append: i | append: '_name'
          assign category_description_key = 'category_' | append: i | append: '_description'
          assign category_image_key = 'category_' | append: i | append: '_image'
          assign category_link_key = 'category_' | append: i | append: '_link'

          assign category_enabled = block.settings[category_enabled_key]
          assign category_name = block.settings[category_name_key]
          assign category_description = block.settings[category_description_key]
          assign category_image = block.settings[category_image_key]
          assign category_link = block.settings[category_link_key]
        %}

        {% if category_enabled %}
          <a
            href="{{ category_link | default: '#' }}"
            class="ai-shop-category-card-{{ ai_gen_id }}"
            {% if category_link == blank %}onclick="return false;"{% endif %}
          >
            <div class="ai-shop-category-image-wrapper-{{ ai_gen_id }}">
              {% if category_image %}
                <img
                  src="{{ category_image | image_url: width: 600 }}"
                  alt="{{ category_name | escape }}"
                  class="ai-shop-category-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-shop-category-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                  <div class="ai-shop-category-empty-state-{{ ai_gen_id }}">
                    Add image
                  </div>
                </div>
              {% endif %}

              <div class="ai-shop-category-overlay-{{ ai_gen_id }}">
                <div class="ai-shop-category-content-{{ ai_gen_id }}">
                  {% if category_name != blank %}
                    <h3 class="ai-shop-category-name-{{ ai_gen_id }}">{{ category_name }}</h3>
                  {% endif %}
                  {% if category_description != blank %}
                    <p class="ai-shop-category-description-{{ ai_gen_id }}">{{ category_description }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

