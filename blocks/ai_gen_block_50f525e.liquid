{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .men-hub-{{ ai_gen_id }} {
    width: 100%;
  }

  .men-hub-section-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.section_spacing }}px;
  }

  .men-hub-hero-{{ ai_gen_id }} {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: {{ block.settings.hero_text_color }};
    background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));
    overflow: hidden;
  }

  .men-hub-hero-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .men-hub-hero-content-{{ ai_gen_id }} {
    max-width: 600px;
    padding: 40px 20px;
    z-index: 2;
  }

  .men-hub-hero-title-{{ ai_gen_id }} {
