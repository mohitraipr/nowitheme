{% doc %}
  @prompt
    Create a featured section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-section__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-section__content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .ai-featured-section__content-{{ ai_gen_id }} {
      grid-template-columns: {% if block.settings.layout == 'image_first' %}1fr 1fr{% else %}1fr 1fr{% endif %};
      gap: 60px;
    }

    .ai-featured-section__content-{{ ai_gen_id }}--image-first .ai-featured-section__image-wrapper-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-featured-section__content-{{ ai_gen_id }}--image-first .ai-featured-section__text-wrapper-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-featured-section__content-{{ ai_gen_id }}--text-first .ai-featured-section__image-wrapper-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-featured-section__content-{{ ai_gen_id }}--text-first .ai-featured-section__text-wrapper-{{ ai_gen_id }} {
      order: 1;
    }
  }

  .ai-featured-section__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-featured-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-featured-section__text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-featured-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-featured-section__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-featured-section__button-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
    flex-wrap: wrap;
  }

  .ai-featured-section__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 40px;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid {{ block.settings.button_bg_color }};
  }

  .ai-featured-section__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-featured-section__button--secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_button_text_color }};
    border: 1px solid {{ block.settings.secondary_button_border_color }};
  }

  .ai-featured-section__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg_color }};
    color: {{ block.settings.secondary_button_hover_text_color }};
    border-color: {{ block.settings.secondary_button_hover_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-featured-section__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-featured-section__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }

    .ai-featured-section__button-wrapper-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-featured-section__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-featured-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-section__container-{{ ai_gen_id }}">
    <div class="ai-featured-section__content-{{ ai_gen_id }} ai-featured-section__content-{{ ai_gen_id }}--{{ block.settings.layout }}">
      <div class="ai-featured-section__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-featured-section__image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-featured-section__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-featured-section__empty-state-{{ ai_gen_id }}">
              Add an image to get started
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-featured-section__text-wrapper-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-section__heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-featured-section__text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        {% endif %}

        {% if block.settings.button_label != blank or block.settings.secondary_button_label != blank %}
          <div class="ai-featured-section__button-wrapper-{{ ai_gen_id }}">
            {% if block.settings.button_label != blank %}
              <a
                href="{{ block.settings.button_link }}"
                class="ai-featured-section__button-{{ ai_gen_id }}"
              >
                {{ block.settings.button_label }}
              </a>
            {% endif %}

            {% if block.settings.secondary_button_label != blank %}
              <a
                href="{{ block.settings.secondary_button_link }}"
                class="ai-featured-section__button-{{ ai_gen_id }} ai-featured-section__button--secondary-{{ ai_gen_id }}"
              >
                {{ block.settings.secondary_button_label }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image position",
      "options": [
        {
          "value": "image_first",
          "label": "Left"
        },
        {
          "value": "text_first",
          "label": "Right"
        }
      ],
      "default": "image_first"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Featured section"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 40
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Showcase your products, collections, or brand story with this featured section.</p>"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Primary button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Background",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Text",
      "default": "#fcfcfc"
    },
    {
      "type": "color",
      "id": "button_hover_bg_color",
      "label": "Hover background",
      "default": "#18566c"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Hover text",
      "default": "#fcfcfc"
    },
    {
      "type": "header",
      "content": "Secondary button"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Label"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "secondary_button_text_color",
      "label": "Text",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "secondary_button_border_color",
      "label": "Border",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_bg_color",
      "label": "Hover background",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_text_color",
      "label": "Hover text",
      "default": "#fcfcfc"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#fcfcfc"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#103948"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Featured section"
    }
  ]
}
{% endschema %}
