{% doc %}
  @prompt
    Create a hero section that contains auto play videos or image whichever i have uploaded 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.hero_height_desktop }}vh;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
  }

  .ai-hero-media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 20px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 30px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 40px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      height: {{ block.settings.hero_height_mobile }}vh;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 20px 15px;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.video != blank %}
    <video
      class="ai-hero-video-{{ ai_gen_id }}"
      autoplay
      muted
      loop
      playsinline
      {% if block.settings.video_poster %}
        poster="{{ block.settings.video_poster | image_url: width: 2000 }}"
      {% endif %}
    >
      {% for source in block.settings.video.sources %}
        <source src="{{ source.url }}" type="{{ source.mime_type }}">
      {% endfor %}
    </video>
  {% elsif block.settings.image %}
    <img
      src="{{ block.settings.image | image_url: width: 2000 }}"
      alt="{{ block.settings.image.alt | escape }}"
      class="ai-hero-media-{{ ai_gen_id }}"
      loading="eager"
      width="{{ block.settings.image.width }}"
      height="{{ block.settings.image.height }}"
    >
  {% else %}
    <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Next, add a video or image
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

