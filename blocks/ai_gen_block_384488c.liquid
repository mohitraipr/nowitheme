{% doc %}
  @prompt
    Create a mens landing page, this is not good i want best take inspirations from some mens website and create their homepage, BUT THIS IS EVEN WORSE I WANT BEST EVERYTHING 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-luxury-mens-{{ ai_gen_id }} {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: #1a1a1a;
  }

  .ai-luxury-hero-{{ ai_gen_id }} {
    position: relative;
    height: 100vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #000;
  }

  .ai-luxury-hero-media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-luxury-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7) contrast(1.1);
  }

  .ai-luxury-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-luxury-hero-placeholder-{{ ai_gen_id }} svg {
    width: 200px;
    height: 200px;
    opacity: 0.1;
    color: #fff;
  }

  .ai-luxury-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
    width: 100%;
  }

  .ai-luxury-hero-text-{{ ai_gen_id }} {
    max-width: 700px;
    color: #fff;
  }

  .ai-luxury-hero-eyebrow-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 20px;
    opacity: 0.8;
    display: block;
  }

  .ai-luxury-hero-title-{{ ai_gen_id }} {
    font-size: clamp(3.5rem, 7vw, 6rem);
    font-weight: 300;
    line-height: 0.95;
    margin: 0 0 30px;
    letter-spacing: -0.02em;
    font-family: 'Cormorant Garamond', serif;
  }

  .ai-luxury-hero-subtitle-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 300;
    line-height: 1.5;
    margin: 0 0 50px;
    opacity: 0.9;
    max-width: 500px;
  }

  .ai-luxury-hero-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 16px 40px;
    background: transparent;
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    border: 1px solid rgba(255,255,255,0.3);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .ai-luxury-hero-cta-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #fff;
    transition: left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: -1;
  }

  .ai-luxury-hero-cta-{{ ai_gen_id }}:hover::before {
    left: 0;
  }

  .ai-luxury-hero-cta-{{ ai_gen_id }}:hover {
    color: #000;
    border-color: #fff;
  }

  .ai-luxury-collections-{{ ai_gen_id }} {
    padding: 120px 60px;
    background: #fafafa;
  }

  .ai-luxury-collections-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-luxury-section-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 100px;
  }

  .ai-luxury-section-eyebrow-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 20px;
    display: block;
  }

  .ai-luxury-section-title-{{ ai_gen_id }} {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 300;
    line-height: 1.1;
    margin: 0 0 25px;
    color: #1a1a1a;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: -0.01em;
  }

  .ai-luxury-section-subtitle-{{ ai_gen_id }} {
    font-size: 16px;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    font-weight: 300;
  }

  .ai-luxury-collections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .ai-luxury-collection-card-{{ ai_gen_id }} {
    position: relative;
    cursor: pointer;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-luxury-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-10px);
  }

  .ai-luxury-collection-image-{{ ai_gen_id }} {
    width: 100%;
    height: 500px;
    object-fit: cover;
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-luxury-collection-card-{{ ai_gen_id }}:hover .ai-luxury-collection-image-{{ ai_gen_id }} {
    filter: brightness(0.9) saturate(1.1);
  }

  .ai-luxury-collection-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 500px;
    background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-luxury-collection-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
    color: #999;
  }

  .ai-luxury-collection-info-{{ ai_gen_id }} {
    padding: 30px 0;
    text-align: center;
  }

  .ai-luxury-collection-name-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: 300;
    margin: 0 0 10px;
    color: #1a1a1a;
    font-family: 'Cormorant Garamond', serif;
  }

  .ai-luxury-collection-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
    margin: 0 0 20px;
    line-height: 1.5;
  }

  .ai-luxury-collection-link-{{ ai_gen_id }} {
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
  }

  .ai-luxury-collection-link-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #1a1a1a;
    transition: width 0.3s ease;
  }

  .ai-luxury-collection-link-{{ ai_gen_id }}:hover::after {
    width: 100%;
  }

  .ai-luxury-featured-{{ ai_gen_id }} {
    padding: 0;
    background: #fff;
  }

  .ai-luxury-featured-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 80vh;
  }

  .ai-luxury-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 600px;
  }

  .ai-luxury-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 600px;
    background: linear-gradient(135deg, #f0f0f0 0%, #e8e8e8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-luxury-featured-placeholder-{{ ai_gen_id }} svg {
    width: 120px;
    height: 120px;
    opacity: 0.2;
    color: #999;
  }

  .ai-luxury-featured-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    padding: 80px 60px;
    background: #1a1a1a;
    color: #fff;
    order: {{ block.settings.content_position }};
  }

  .ai-luxury-featured-text-{{ ai_gen_id }} {
    max-width: 500px;
  }

  .ai-luxury-featured-eyebrow-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 25px;
    opacity: 0.7;
    display: block;
  }

  .ai-luxury-featured-title-{{ ai_gen_id }} {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 300;
    line-height: 1.1;
    margin: 0 0 30px;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: -0.01em;
  }

  .ai-luxury-featured-description-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 40px;
    opacity: 0.9;
    font-weight: 300;
  }

  .ai-luxury-featured-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 16px 40px;
    background: transparent;
    color: #fff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    border: 1px solid rgba(255,255,255,0.3);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .ai-luxury-featured-cta-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #fff;
    transition: left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: -1;
  }

  .ai-luxury-featured-cta-{{ ai_gen_id }}:hover::before {
    left: 0;
  }

  .ai-luxury-featured-cta-{{ ai_gen_id }}:hover {
    color: #000;
    border-color: #fff;
  }

  .ai-luxury-newsletter-{{ ai_gen_id }} {
    padding: 100px 60px;
    background: #f8f8f8;
    text-align: center;
  }

  .ai-luxury-newsletter-container-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-luxury-newsletter-eyebrow-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 20px;
    display: block;
  }

  .ai-luxury-newsletter-title-{{ ai_gen_id }} {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 300;
    line-height: 1.2;
    margin: 0 0 20px;
    color: #1a1a1a;
    font-family: 'Cormorant Garamond', serif;
  }

  .ai-luxury-newsletter-subtitle-{{ ai_gen_id }} {
    font-size: 16px;
    color: #666;
    margin: 0 0 50px;
    font-weight: 300;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-luxury-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
    border: 1px solid #ddd;
    background: #fff;
  }

  .ai-luxury-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 18px 24px;
    border: none;
    background: transparent;
    font-size: 14px;
    color: #1a1a1a;
  }

  .ai-luxury-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: #999;
  }

  .ai-luxury-newsletter-input-{{ ai_gen_id }}:focus {
    outline: none;
  }

  .ai-luxury-newsletter-button-{{ ai_gen_id }} {
    padding: 18px 30px;
    background: #1a1a1a;
    color: #fff;
    border: none;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .ai-luxury-newsletter-button-{{ ai_gen_id }}:hover {
    background: #333;
  }

  .ai-luxury-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-style: italic;
    font-size: 14px;
  }

  @media screen and (max-width: 1024px) {
    .ai-luxury-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .ai-luxury-featured-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-luxury-featured-content-{{ ai_gen_id }} {
      order: 1;
      padding: 60px 40px;
    }

    .ai-luxury-collections-{{ ai_gen_id }},
    .ai-luxury-newsletter-{{ ai_gen_id }} {
      padding: 80px 40px;
    }

    .ai-luxury-hero-content-{{ ai_gen_id }} {
      padding: 0 40px;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-luxury-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-luxury-collection-image-{{ ai_gen_id }},
    .ai-luxury-collection-placeholder-{{ ai_gen_id }} {
      height: 400px;
    }

    .ai-luxury-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
      max-width: 300px;
    }

    .ai-luxury-newsletter-input-{{ ai_gen_id }},
    .ai-luxury-newsletter-button-{{ ai_gen_id }} {
      padding: 16px 20px;
    }

    .ai-luxury-collections-{{ ai_gen_id }},
    .ai-luxury-newsletter-{{ ai_gen_id }} {
      padding: 60px 20px;
    }

    .ai-luxury-hero-content-{{ ai_gen_id }} {
      padding: 0 20px;
    }

    .ai-luxury-featured-content-{{ ai_gen_id }} {
      padding: 50px 20px;
    }
  }
{% endstyle %}

<div class="ai-luxury-mens-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <section class="ai-luxury-hero-{{ ai_gen_id }}">
    <div class="ai-luxury-hero-media-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 2400 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-luxury-hero-image-{{ ai_gen_id }}"
          loading="eager"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-luxury-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-luxury-empty-state-{{ ai_gen_id }}" style="position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%); color: rgba(255,255,255,0.6);">
            Add a hero background image
          </div>
        </div>
      {% endif %}
    </div>
    
    <div class="ai-luxury-hero-content-{{ ai_gen_id }}">
      <div class="ai-luxury-hero-text-{{ ai_gen_id }}">
        {% if block.settings.hero_eyebrow != blank %}
          <span class="ai-luxury-hero-eyebrow-{{ ai_gen_id }}">{{ block.settings.hero_eyebrow }}</span>
        {% endif %}
        
        {% if block.settings.hero_title != blank %}
          <h1 class="ai-luxury-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
        {% endif %}
        
        {% if block.settings.hero_subtitle != blank %}
          <p class="ai-luxury-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</p>
        {% endif %}
        
        {% if block.settings.hero_cta_text != blank and block.settings.hero_cta_link != blank %}
          <a href="{{ block.settings.hero_cta_link }}" class="ai-luxury-hero-cta-{{ ai_gen_id }}">
            {{ block.settings.hero_cta_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </section>

  <section class="ai-luxury-collections-{{ ai_gen_id }}">
    <div class="ai-luxury-collections-container-{{ ai_gen_id }}">
      <div class="ai-luxury-section-header-{{ ai_gen_id }}">
        {% if block.settings.collections_eyebrow != blank %}
          <span class="ai-luxury-section-eyebrow-{{ ai_gen_id }}">{{ block.settings.collections_eyebrow }}</span>
        {% endif %}
        
        {% if block.settings.collections_title != blank %}
          <h2 class="ai-luxury-section-title-{{ ai_gen_id }}">{{ block.settings.collections_title }}</h2>
        {% endif %}
        
        {% if block.settings.collections_subtitle != blank %}
          <p class="ai-luxury-section-subtitle-{{ ai_gen_id }}">{{ block.settings.collections_subtitle }}</p>
        {% endif %}
      </div>
      
      <div class="ai-luxury-collections-grid-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}
          
          <div class="ai-luxury-collection-card-{{ ai_gen_id }}">
            {% if collection != blank %}
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-luxury-collection-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="500"
                >
              {% else %}
                <div class="ai-luxury-collection-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              
              <div class="ai-luxury-collection-info-{{ ai_gen_id }}">
                <h3 class="ai-luxury-collection-name-{{ ai_gen_id }}">{{ collection.title }}</h3>
                
                {% if collection.description != blank %}
                  <p class="ai-luxury-collection-description-{{ ai_gen_id }}">
                    {{ collection.description | truncate: 100 }}
                  </p>
                {% endif %}
                
                <a href="{{ collection.url }}" class="ai-luxury-collection-link-{{ ai_gen_id }}">
                  Explore Collection
                </a>
              </div>
            {% else %}
              <div class="ai-luxury-collection-placeholder-{{ ai_gen_id }}">
                {{ 'collection-apparel-1' | placeholder_svg_tag }}
              </div>
              
              <div class="ai-luxury-collection-info-{{ ai_gen_id }}">
                <div class="ai-luxury-empty-state-{{ ai_gen_id }}">
                  Select collection {{ i }}
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="ai-luxury-featured-{{ ai_gen_id }}">
    <div class="ai-luxury-featured-container-{{ ai_gen_id }}">
      <div class="ai-luxury-featured-content-{{ ai_gen_id }}">
        <div class="ai-luxury-featured-text-{{ ai_gen_id }}">
          {% if block.settings.featured_eyebrow != blank %}
            <span class="ai-luxury-featured-eyebrow-{{ ai_gen_id }}">{{ block.settings.featured_eyebrow }}</span>
          {% endif %}
          
          {% if block.settings.featured_title != blank %}
            <h2 class="ai-luxury-featured-title-{{ ai_gen_id }}">{{ block.settings.featured_title }}</h2>
          {% endif %}
          
          {% if block.settings.featured_description != blank %}
            <div class="ai-luxury-featured-description-{{ ai_gen_id }}">{{ block.settings.featured_description }}</div>
          {% endif %}
          
          {% if block.settings.featured_cta_text != blank and block.settings.featured_cta_link != blank %}
            <a href="{{ block.settings.featured_cta_link }}" class="ai-luxury-featured-cta-{{ ai_gen_id }}">
              {{ block.settings.featured_cta_text }}
            </a>
          {% endif %}
        </div>
      </div>
      
      <div>
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 800 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            class="ai-luxury-featured-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
          >
        {% else %}
          <div class="ai-luxury-featured-placeholder-{{ ai_gen_id }}">
            {{ 'detailed-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  <section class="ai-luxury-newsletter-{{ ai_gen_id }}">
    <div class="ai-luxury-newsletter-container-{{ ai_gen_id }}">
      {% if block.settings.newsletter_eyebrow != blank %}
        <span class="ai-luxury-newsletter-eyebrow-{{ ai_gen_id }}">{{ block.settings.newsletter_eyebrow }}</span>
      {% endif %}
      
      {% if block.settings.newsletter_title != blank %}
        <h2 class="ai-luxury-newsletter-title-{{ ai_gen_id }}">{{ block.settings.newsletter_title }}</h2>
      {% endif %}
      
      {% if block.settings.newsletter_subtitle != blank %}
        <p class="ai-luxury-newsletter-subtitle-{{ ai_gen_id }}">{{ block.settings.newsletter_subtitle }}</p>
      {% endif %}
      
      {%- form 'customer' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="ai-luxury-newsletter-form-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-luxury-newsletter-input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.email_placeholder }}"
            aria-label="Email address"
            required
          >
          <button type="submit" class="ai-luxury-newsletter-button-{{ ai_gen_id }}">
            {{ block.settings.newsletter_button_text }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Luxury men's homepage",
  "settings": [
    {
      "type": "header",
      "content": "Hero section"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero background image"
    },
    {
      "type": "text",
      "id": "hero_eyebrow",
      "label": "Hero eyebrow text",
      "default": "Spring Summer 2024"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero title",
      "default": "Timeless Elegance"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero subtitle",
      "default": "Discover our curated collection of premium menswear, where classic sophistication meets contemporary design."
    },
    {
      "type": "text",
      "id": "hero_cta_text",
      "label": "Hero button text",
      "default": "Explore Collection"
