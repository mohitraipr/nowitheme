{% doc %}
  @prompt
    Editorial / Campaign banner (Image with text)
    
    One clear CTA.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-campaign-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height }}px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-campaign-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-campaign-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-campaign-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-campaign-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-campaign-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
    min-height: {{ block.settings.banner_height }}px;
  }

  .ai-campaign-banner-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 16px;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-campaign-banner-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 24px;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-campaign-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 32px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-campaign-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-campaign-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-campaign-banner-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-campaign-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-campaign-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-campaign-banner-button-{{ ai_gen_id }} {
      padding: 10px 24px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-campaign-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.banner_image %}
    <img
      src="{{ block.settings.banner_image | image_url: width: 2000 }}"
      alt="{{ block.settings.banner_image.alt | escape }}"
      class="ai-campaign-banner-image-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.banner_image.width }}"
      height="{{ block.settings.banner_image.height }}"
    >
  {% else %}
    <div class="ai-campaign-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
    <div class="ai-campaign-banner-empty-state-{{ ai_gen_id }}">
      Add a campaign image to get started
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-campaign-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-campaign-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-campaign-banner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-campaign-banner-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link | default: '#' }}"
        class="ai-campaign-banner-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

