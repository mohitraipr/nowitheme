{% doc %}
  @prompt
    Above the grid
    
    Collection banner: title + short description (optional image).
    
    Breadcrumbs: Enable (helps orientation).
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-collection-banner-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-collection-banner-breadcrumbs-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.breadcrumb_spacing }}px;
  }

  .ai-collection-banner-breadcrumb-list-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: {{ block.settings.breadcrumb_font_size }}px;
    color: {{ block.settings.breadcrumb_color }};
  }

  .ai-collection-banner-breadcrumb-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-collection-banner-breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-collection-banner-breadcrumb-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.breadcrumb_hover_color }};
    text-decoration: underline;
  }

  .ai-collection-banner-breadcrumb-separator-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_color }};
    opacity: 0.6;
  }

  .ai-collection-banner-content-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.content_gap }}px;
    align-items: {{ block.settings.content_alignment }};
    {% if block.settings.image and block.settings.layout == 'image_text' %}
      grid-template-columns: 1fr 1fr;
    {% elsif block.settings.image and block.settings.layout == 'text_image' %}
      grid-template-columns: 1fr 1fr;
    {% else %}
      grid-template-columns: 1fr;
    {% endif %}
  }

  .ai-collection-banner-text-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.layout == 'text_image' %}
      order: 1;
    {% endif %}
  }

  .ai-collection-banner-title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-style: {{ settings.type_header_font.style }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
    color: {{ block.settings.title_color }};
  }

  .ai-collection-banner-description-{{ ai_gen_id }} {
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-style: {{ settings.type_body_font.style }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    color: {{ block.settings.description_color }};
  }

  .ai-collection-banner-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.layout == 'text_image' %}
      order: 2;
    {% endif %}
  }

  .ai-collection-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ settings.media_radius }}px;
    {% if settings.media_border_thickness > 0 %}
      border: {{ settings.media_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.media_border_opacity | divided_by: 100.0 }});
    {% endif %}
    {% if settings.media_shadow_opacity > 0 %}
      box-shadow: {{ settings.media_shadow_horizontal_offset }}px {{ settings.media_shadow_vertical_offset }}px {{ settings.media_shadow_blur }}px rgba(var(--color-shadow), {{ settings.media_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-collection-banner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: rgba(var(--color-foreground), 0.04);
    border-radius: {{ settings.media_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    {% if settings.media_border_thickness > 0 %}
      border: {{ settings.media_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.media_border_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-collection-banner-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-collection-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(var(--color-background), 0.9);
    border-radius: {{ settings.buttons_radius }}px;
    font-size: 14px;
    color: rgba(var(--color-foreground), 0.7);
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-collection-banner-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.content_gap | times: 0.8 }}px;
    }

    .ai-collection-banner-text-content-{{ ai_gen_id }},
    .ai-collection-banner-image-wrapper-{{ ai_gen_id }} {
      order: unset;
    }

    .ai-collection-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-banner-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-collection-banner-image-{{ ai_gen_id }},
    .ai-collection-banner-image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-collection-banner-breadcrumb-list-{{ ai_gen_id }} {
      font-size: {{ block.settings.breadcrumb_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-banner-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-banner-container-{{ ai_gen_id }}">
    {% if block.settings.show_breadcrumbs %}
      <nav class="ai-collection-banner-breadcrumbs-{{ ai_gen_id }}" aria-label="Breadcrumb">
        <ol class="ai-collection-banner-breadcrumb-list-{{ ai_gen_id }}">
          <li class="ai-collection-banner-breadcrumb-item-{{ ai_gen_id }}">
            <a href="{{ routes.root_url }}" class="ai-collection-banner-breadcrumb-link-{{ ai_gen_id }}">Home</a>
            <span class="ai-collection-banner-breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">â€º</span>
          </li>
          {% if collection %}
            <li class="ai-collection-banner-breadcrumb-item-{{ ai_gen_id }}">
              <span>{{ collection.title }}</span>
            </li>
          {% else %}
            <li class="ai-collection-banner-breadcrumb-item-{{ ai_gen_id }}">
              <span>Collections</span>
            </li>
          {% endif %}
        </ol>
      </nav>
    {% endif %}

    <div class="ai-collection-banner-content-{{ ai_gen_id }}">
      <div class="ai-collection-banner-text-content-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h1 class="ai-collection-banner-title-{{ ai_gen_id }}">
            {{ block.settings.title }}
          </h1>
        {% elsif collection %}
          <h1 class="ai-collection-banner-title-{{ ai_gen_id }}">
            {{ collection.title }}
          </h1>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-collection-banner-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% elsif collection and collection.description != blank %}
          <div class="ai-collection-banner-description-{{ ai_gen_id }}">
            {{ collection.description }}
          </div>
        {% endif %}
      </div>

      {% if block.settings.image or block.settings.show_placeholder %}
        <div class="ai-collection-banner-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-collection-banner-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% elsif block.settings.show_placeholder %}
            <div class="ai-collection-banner-image-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}
              <div class="ai-collection-banner-empty-state-{{ ai_gen_id }}">
                Add an image to enhance your collection banner
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Custom title",
      "info": "Leave blank to use collection title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Custom description",
      "info": "Leave blank to use collection description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "checkbox",
      "id": "show_placeholder",
      "label": "Show placeholder when no image",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "text_only",
          "label": "Text only"
        },
        {
          "value": "image_text",
          "label": "Image left, text right"
        },
        {
          "value": "text_image",
          "label": "Text left, image right"
        }
      ],
      "default": "text_only"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 20,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Content gap",
      "default": 40
    },
    {
      "type": "header",
      "content": "Breadcrumbs"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "range",
      "id": "breadcrumb_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Breadcrumb spacing",
      "default": 16
    },
    {
      "type": "range",
      "id": "breadcrumb_font_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Breadcrumb font size",
      "default": 14
    },
    {
      "type": "color",
      "id": "breadcrumb_color",
      "label": "Breadcrumb color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "breadcrumb_hover_color",
      "label": "Breadcrumb hover color",
      "default": "#103948"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 48
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#103948"
    },
    {
      "type": "range",
      "id": "title_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Title spacing",
      "default": 16
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#103948"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 200,
      "max": 600,
      "step": 20,
      "unit": "px",
      "label": "Image height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
