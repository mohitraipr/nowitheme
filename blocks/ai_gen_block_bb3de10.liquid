{% doc %}
  @prompt
    USP/Trust bar (Multicolumn with icons)
    
    “Free shipping over ₹999 · 15-day easy returns · COD available”.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-trust-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-trust-bar-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-trust-bar-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-align: center;
    flex: 1;
    min-width: 0;
  }

  .ai-trust-bar-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-trust-bar-text-{{ ai_gen_id }} {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .ai-trust-bar-divider-{{ ai_gen_id }} {
    width: 1px;
    height: {{ block.settings.divider_height }}px;
    background-color: {{ block.settings.divider_color }};
    opacity: {{ block.settings.divider_opacity | divided_by: 100.0 }};
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-trust-bar-container-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        flex-direction: column;
        gap: {{ block.settings.mobile_spacing }}px;
      {% else %}
        gap: {{ block.settings.mobile_spacing }}px;
      {% endif %}
    }

    .ai-trust-bar-item-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        justify-content: center;
      {% endif %}
      font-size: {{ block.settings.mobile_font_size }}px;
    }

    .ai-trust-bar-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }

    .ai-trust-bar-text-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        white-space: normal;
        text-overflow: initial;
        overflow: visible;
      {% endif %}
    }

    {% if block.settings.mobile_layout == 'stack' %}
      .ai-trust-bar-divider-{{ ai_gen_id }} {
        display: none;
      }
    {% endif %}
  }
{% endstyle %}

