          {% endif %}
          {% if block.settings.shop_bestsellers_url != blank %}
            <li><a href="{{ block.settings.shop_bestsellers_url }}">Bestsellers</a></li>
          {% endif %}
          {% if block.settings.shop_sale_url != blank %}
            <li><a href="{{ block.settings.shop_sale_url }}">Sale</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        <h4 class="ai-footer-column-title-{{ ai_gen_id }}">Help</h4>
        <ul class="ai-footer-links-{{ ai_gen_id }}">
          {% if block.settings.help_shipping_url != blank %}
