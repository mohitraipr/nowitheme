          {% endif %}
          {% if block.settings.help_size_guide_url != blank %}
            <li><a href="{{ block.settings.help_size_guide_url }}">Size Guide</a></li>
          {% endif %}
          {% if block.settings.help_care_guide_url != blank %}
            <li><a href="{{ block.settings.help_care_guide_url }}">Care Guide</a></li>
          {% endif %}
          {% if block.settings.help_track_order_url != blank %}
            <li><a href="{{ block.settings.help_track_order_url }}">Track Order</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        <h4 class="ai-footer-column-title-{{ ai_gen_id }}">Company</h4>
        <ul class="ai-footer-links-{{ ai_gen_id }}">
          {% if block.settings.company_about_url != blank %}
            <li><a href="{{ block.settings.company_about_url }}">About</a></li>
          {% endif %}
          {% if block.settings.company_careers_url != blank %}
            <li><a href="{{ block.settings.company_careers_url }}">Careers</a></li>
          {% endif %}
          {% if block.settings.company_contact_url != blank %}
            <li><a href="{{ block.settings.company_contact_url }}">Contact</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        <h4 class="ai-footer-column-title-{{ ai_gen_id }}">Contact</h4>
        <ul class="ai-footer-links-{{ ai_gen_id }}">
