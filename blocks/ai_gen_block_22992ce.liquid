            <li><a href="{{ block.settings.shop_men_url }}">Men</a></li>
          {% endif %}
          {% if block.settings.shop_kids_url != blank %}
            <li><a href="{{ block.settings.shop_kids_url }}">Kids</a></li>
          {% endif %}
          {% if block.settings.shop_new_url != blank %}
