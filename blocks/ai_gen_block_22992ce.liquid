{% doc %}
  @prompt
    Email signup (first block in footer)
    
    Compact style; reassure privacy.
    
    Four columns of links (Text columns with links)
    
    Shop: Women, Men, Kids, New, Bestsellers, Sale
    
    Help: Shipping & Returns, Size Guide, Care Guide, Track order
    
    Company: About, Careers (if any), Contact
    
    Contact: Email, WhatsApp link, Address (city/country)
    
    Payment icons & badges
    
    Keep small and monochrome if possible.
    
    Social icons
    
    Only where youâ€™re active. create a footer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    grid-column: span 1;
  }

  .ai-footer-newsletter-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.text_color }};
  }

  .ai-footer-newsletter-subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    line-height: 1.4;
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-bottom: 12px;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 10px 12px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: 4px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} {
    padding: 10px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    white-space: nowrap;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-footer-privacy-text-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    line-height: 1.3;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    grid-column: span 1;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-footer-links-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-footer-links-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-footer-links-{{ ai_gen_id }} a {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: 14px;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .ai-footer-links-{{ ai_gen_id }} a:hover {
    opacity: 1;
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 24px;
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: 24px;
    align-items: center;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-footer-payment-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    width: 32px;
    height: 20px;
    background-color: {{ block.settings.text_color }};
    opacity: 0.6;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} svg {
    width: 24px;
    height: 16px;
    fill: {{ block.settings.background_color }};
  }

  .ai-footer-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 12px;
    margin-top: 8px;
  }

  .ai-footer-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 12px;
    margin-top: 8px;
  }

  @media screen and (max-width: 990px) {
    .ai-footer-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 32px;
    }

    .ai-footer-newsletter-{{ ai_gen_id }} {
      grid-column: span 3;
      margin-bottom: 20px;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 16px;
      text-align: center;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-footer-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    .ai-footer-newsletter-{{ ai_gen_id }} {
      grid-column: span 2;
    }

    .ai-footer-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-footer-payment-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-footer-social-{{ ai_gen_id }} {
      justify-content: center;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-footer-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-footer-newsletter-{{ ai_gen_id }} {
      grid-column: span 1;
    }
  }
{% endstyle %}

<footer class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-container-{{ ai_gen_id }}">
    <div class="ai-footer-content-{{ ai_gen_id }}">
      <div class="ai-footer-newsletter-{{ ai_gen_id }}">
        <h3 class="ai-footer-newsletter-title-{{ ai_gen_id }}">{{ block.settings.newsletter_title }}</h3>
        <p class="ai-footer-newsletter-subtitle-{{ ai_gen_id }}">{{ block.settings.newsletter_subtitle }}</p>
        
        {%- form 'customer' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="ai-footer-newsletter-form-{{ ai_gen_id }}">
            <input
              type="email"
              name="contact[email]"
              class="ai-footer-newsletter-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{{ block.settings.email_placeholder }}"
              aria-label="Email address"
              autocorrect="off"
              autocapitalize="off"
              required
            >
            <button type="submit" class="ai-footer-newsletter-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </button>
          </div>
          {%- if form.posted_successfully? -%}
            <div class="ai-footer-success-{{ ai_gen_id }}">{{ block.settings.success_message }}</div>
          {%- endif -%}
          {%- if form.errors -%}
            <div class="ai-footer-error-{{ ai_gen_id }}">{{ form.errors.messages.email }}</div>
          {%- endif -%}
        {%- endform -%}
        
        <p class="ai-footer-privacy-text-{{ ai_gen_id }}">{{ block.settings.privacy_text }}</p>
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        <h4 class="ai-footer-column-title-{{ ai_gen_id }}">Shop</h4>
        <ul class="ai-footer-links-{{ ai_gen_id }}">
