{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collections-{{ ai_gen_id }} {
    padding: 40px 0;
  }

  .ai-featured-collections-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collections-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-featured-collections-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: rgb(var(--color-foreground));
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-featured-collections-subtitle-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.subtitle_size }}px;
    color: rgba(var(--color-foreground), 0.75);
    margin: 0;
    line-height: 1.4;
  }

  .ai-featured-collections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
  }

  .ai-featured-collections-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ settings.collection_card_corner_radius }}px;
    {% if settings.collection_card_shadow_opacity > 0 %}
      box-shadow: {{ settings.collection_card_shadow_horizontal_offset }}px {{ settings.collection_card_shadow_vertical_offset }}px {{ settings.collection_card_shadow_blur }}px rgba(var(--color-shadow), {{ settings.collection_card_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    {% if settings.collection_card_border_thickness > 0 %}
      border: {{ settings.collection_card_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.collection_card_border_opacity | divided_by: 100.0 }});
    {% endif %}
    transition: transform 0.3s ease;
  }

  .ai-featured-collections-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-featured-collections-card-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-featured-collections-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
    background-color: rgba(var(--color-foreground), 0.04);
  }

  .ai-featured-collections-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-collections-card-{{ ai_gen_id }}:hover .ai-featured-collections-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-collections-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--color-foreground), 0.04);
    position: relative;
  }

  .ai-featured-collections-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-collections-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: rgba(var(--color-foreground), 0.6);
    text-align: center;
    pointer-events: none;
  }

  .ai-featured-collections-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%);
    display: flex;
    align-items: flex-end;
    padding: 24px;
  }

  .ai-featured-collections-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-align: {{ settings.collection_card_text_alignment }};
    width: 100%;
  }

  .ai-featured-collections-collection-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.collection_title_size }}px;
    margin: 0 0 8px;
    line-height: 1.2;
  }

  .ai-featured-collections-collection-description-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.collection_description_size }}px;
    margin: 0;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-featured-collections-product-count-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.collection_description_size | minus: 2 }}px;
    margin: 8px 0 0;
    opacity: 0.8;
  }

  @media screen and (max-width: 990px) {
    .ai-featured-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collections-{{ ai_gen_id }} {
      padding: 30px 0;
    }

    .ai-featured-collections-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-featured-collections-header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-featured-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ settings.spacing_grid_horizontal | divided_by: 2 }}px {{ settings.spacing_grid_vertical | divided_by: 2 }}px;
    }

    .ai-featured-collections-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-featured-collections-overlay-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<div class="ai-featured-collections-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collections-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-featured-collections-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collections-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-featured-collections-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-featured-collections-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
          assign show_collection = false

          case i
            when 1
              if block.settings.show_collection_1
                assign show_collection = true
              endif
            when 2
              if block.settings.show_collection_2
                assign show_collection = true
              endif
            when 3
              if block.settings.show_collection_3
                assign show_collection = true
              endif
            when 4
              if block.settings.show_collection_4
                assign show_collection = true
              endif
          endcase
        %}

        {% if show_collection %}
          <div class="ai-featured-collections-card-{{ ai_gen_id }}">
            {% if collection != blank %}
              <a href="{{ collection.url }}" class="ai-featured-collections-card-link-{{ ai_gen_id }}">
                <div class="ai-featured-collections-image-wrapper-{{ ai_gen_id }}">
                  {% if collection.featured_image %}
                    <img
                      src="{{ collection.featured_image | image_url: width: 600 }}"
                      alt="{{ collection.featured_image.alt | escape }}"
                      class="ai-featured-collections-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="{{ block.settings.image_height }}"
                    >
                  {% else %}
                    <div class="ai-featured-collections-placeholder-{{ ai_gen_id }}">
                      {{ 'collection-apparel-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  
                  <div class="ai-featured-collections-overlay-{{ ai_gen_id }}">
                    <div class="ai-featured-collections-content-{{ ai_gen_id }}">
                      <h3 class="ai-featured-collections-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                      {% if collection.description != blank and block.settings.show_description %}
                        <p class="ai-featured-collections-collection-description-{{ ai_gen_id }}">
                          {{ collection.description | strip_html | truncate: 100 }}
                        </p>
                      {% endif %}
                      {% if block.settings.show_product_count %}
                        <p class="ai-featured-collections-product-count-{{ ai_gen_id }}">
                          {{ collection.products_count }}
                          {% if collection.products_count == 1 %}
                            product
                          {% else %}
                            products
                          {% endif %}
                        </p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </a>
            {% else %}
              <div class="ai-featured-collections-image-wrapper-{{ ai_gen_id }}">
                <div class="ai-featured-collections-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                  <div class="ai-featured-collections-empty-state-{{ ai_gen_id }}">
                    Select a collection
                  </div>
                </div>
                <div class="ai-featured-collections-overlay-{{ ai_gen_id }}">
                  <div class="ai-featured-collections-content-{{ ai_gen_id }}">
                    <h3 class="ai-featured-collections-collection-title-{{ ai_gen_id }}">Collection {{ i }}</h3>
                    <p class="ai-featured-collections-collection-description-{{ ai_gen_id }}">
                      Add your collection to showcase your products
                    </p>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

