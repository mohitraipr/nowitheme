{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-grid-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-grid-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-category-grid-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap_desktop }}px;
    margin: 0;
  }

  .ai-category-grid-item-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
  }

  .ai-category-grid-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    position: relative;
  }

  .ai-category-grid-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: 50%;
    background-color: #f4f4f4;
  }

  .ai-category-grid-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-grid-link-{{ ai_gen_id }}:hover .ai-category-grid-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-grid-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-category-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-grid-title-{{ ai_gen_id }} {
    margin: {{ block.settings.title_spacing }}px 0 0;
    text-align: {{ block.settings.title_alignment }};
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    line-height: {{ block.settings.title_line_height }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    font-weight: {{ block.settings.title_font_weight }};
  }

  @media screen and (max-width: 989px) {
    .ai-category-grid-wrapper-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
      gap: {{ block.settings.gap_tablet }}px;
    }

    .ai-category-grid-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }

    .ai-category-grid-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-grid-wrapper-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-category-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-category-grid-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
      margin-bottom: {{ block.settings.heading_spacing | times: 0.7 }}px;
    }

    .ai-category-grid-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-category-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-category-grid-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-category-grid-wrapper-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% liquid
          assign category_image_key = 'category_' | append: i | append: '_image'
          assign category_title_key = 'category_' | append: i | append: '_title'
          assign category_url_key = 'category_' | append: i | append: '_url'

          assign category_image = block.settings[category_image_key]
          assign category_title = block.settings[category_title_key]
          assign category_url = block.settings[category_url_key]
        %}

        <div class="ai-category-grid-item-{{ ai_gen_id }}">
          <a
            href="{% if category_url != blank %}{{ category_url }}{% else %}#{% endif %}"
            class="ai-category-grid-link-{{ ai_gen_id }}"
            aria-label="{{ category_title | escape }}"
          >
            <div class="ai-category-grid-image-wrapper-{{ ai_gen_id }}">
              {% if category_image %}
                <img
                  src="{{ category_image | image_url: width: 600 }}"
                  alt="{{ category_title | escape }}"
                  loading="lazy"
                  width="600"
                  height="600"
                  class="ai-category-grid-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-category-grid-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            {% if category_title != blank %}
              <h3 class="ai-category-grid-title-{{ ai_gen_id }}">{{ category_title }}</h3>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

