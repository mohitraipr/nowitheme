{% doc %}
  @prompt
    Image banner (Hero)
    
    Height: Small/Medium on mobile; avoid massive heroes.
    
    Add Primary CTA (Shop Women) + Secondary CTA (Shop Men).
    
    For light images, use dark button; for dark images, use light button.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: {{ block.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-banner-text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 16px;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
  }

  .ai-hero-banner-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0 0 32px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-hero-banner-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-hero-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: {{ settings.buttons_radius }}px;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ settings.buttons_border_thickness }}px solid;
    min-width: 140px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-hero-banner-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-hero-banner-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_color }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-hero-banner-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-hero-banner-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_color }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 12px;
    }

    .ai-hero-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
      margin-bottom: 24px;
    }

    .ai-hero-banner-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }

    .ai-hero-banner-button-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }
  }
{% endstyle %}

<div
  class="ai-hero-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.image %}
    <img
      src="{{ block.settings.image | image_url: width: 2000 }}"
      alt="{{ block.settings.image.alt | escape }}"
      class="ai-hero-banner-image-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.image.width }}"
      height="{{ block.settings.image.height }}"
    >
  {% else %}
    <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
        Add a hero image to get started
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-banner-content-{{ ai_gen_id }}">
    <div class="ai-hero-banner-text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-banner-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-banner-subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank %}
        <div class="ai-hero-banner-buttons-{{ ai_gen_id }}">
          {% if block.settings.primary_button_label != blank %}
            <a
              href="{{ block.settings.primary_button_link }}"
              class="ai-hero-banner-button-{{ ai_gen_id }} ai-hero-banner-button-primary-{{ ai_gen_id }}"
            >
              {{ block.settings.primary_button_label }}
            </a>
          {% endif %}

          {% if block.settings.secondary_button_label != blank %}
            <a
              href="{{ block.settings.secondary_button_link }}"
              class="ai-hero-banner-button-{{ ai_gen_id }} ai-hero-banner-button-secondary-{{ ai_gen_id }}"
            >
              {{ block.settings.secondary_button_label }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

