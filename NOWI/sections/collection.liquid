<section class="collection-template">
  <div class="container">
    <header class="collection-header">
      <div>
        <h1 class="section-heading">{{ collection.title | escape }}</h1>
        {% if collection.description != blank %}
          <div class="section-subheading">{{ collection.description }}</div>
        {% endif %}
      </div>
      <div class="collection-toolbar">
        {% if collection.filters.size > 0 %}
          <div class="collection-toolbar__controls">
            <button type="button" class="btn btn-outline" data-filter-toggle>{{ section.settings.filter_button_label | escape }}</button>
          </div>
        {% endif %}
        <form class="collection__sort" method="get" action="{{ collection.url }}">
          <label class="visually-hidden" for="SortBy-{{ section.id }}">{{ section.settings.sort_label | escape }}</label>
          <select id="SortBy-{{ section.id }}" name="sort_by" onchange="this.form.submit()">
            {% for option in collection.sort_options %}
              <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>{{ option.name }}</option>
            {% endfor %}
          </select>
          {% for filter in collection.filters %}
            {% for value in filter.active_values %}
              <input type="hidden" name="{{ value.param_name }}" value="{{ value.value }}">
            {% endfor %}
            {% if filter.type == 'price_range' %}
              {% if filter.min_value.value %}
                <input type="hidden" name="{{ filter.min_value.param_name }}" value="{{ filter.min_value.value }}">
              {% endif %}
              {% if filter.max_value.value %}
                <input type="hidden" name="{{ filter.max_value.param_name }}" value="{{ filter.max_value.value }}">
              {% endif %}
            {% endif %}
          {% endfor %}
        </form>
      </div>
    </header>

    <div class="collection-layout">
      {% if collection.filters.size > 0 %}
        <aside class="filter-panel" data-filter-panel data-open="false">
          <div class="filter-panel__content">
            <div class="collection-toolbar">
              <h2 class="section-heading filter-panel__title">{{ section.settings.filter_heading | escape }}</h2>
              <button type="button" class="icon-button" aria-label="{{ 'general.close' | t }}" data-filter-close>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="m6 6 12 12M6 18 18 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                </svg>
              </button>
            </div>
            <form class="filter-form" method="get" action="{{ collection.url }}">
              <div class="filter-groups">
                {% for filter in collection.filters %}
                  <details class="filter-group" {% if filter.active_values.size > 0 %}open{% endif %}>
                    <summary>{{ filter.label | escape }}</summary>
                    <div class="filter-group__options">
                      {% case filter.type %}
                        {% when 'boolean', 'list' %}
                          {% for value in filter.values %}
                            <label class="filter-group__option">
                              <span>{{ value.label | escape }}</span>
                              <input type="checkbox" name="{{ value.param_name }}" value="{{ value.value }}" {% if value.active %}checked{% endif %} {% if value.count == 0 and value.active == false %}disabled{% endif %}>
                            </label>
                          {% endfor %}
                        {% when 'price_range' %}
                          <div class="filter-group__option filter-group__price">
                            <label>
                              {{ section.settings.filter_price_from_label | escape }}
                              <input type="number" name="{{ filter.min_value.param_name }}" value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}" min="0">
                            </label>
                            <label>
                              {{ section.settings.filter_price_to_label | escape }}
                              <input type="number" name="{{ filter.max_value.param_name }}" value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}" min="0">
                            </label>
                          </div>
                      {% endcase %}
                    </div>
                  </details>
                {% endfor %}
              </div>
              <div class="filter-actions">
                <button class="btn btn-primary" type="submit">{{ section.settings.filter_apply_label | escape }}</button>
                <a class="btn btn-outline" href="{{ collection.url }}">{{ section.settings.filter_clear_label | escape }}</a>
              </div>
            </form>
          </div>
        </aside>
      {% endif %}

      <div class="collection__products">
        {% paginate collection.products by section.settings.products_per_page %}
          {% if collection.products_count > 0 %}
            <div class="collection-grid-products">
              {% for product in collection.products %}
                {% render 'product-card', product: product %}
              {% endfor %}
            </div>
          {% else %}
            <div class="collection-empty">{{ 'collections.general.no_matches' | t }}</div>
          {% endif %}
          <div class="collection__pagination">{{ paginate | default_pagination }}</div>
        {% endpaginate %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "text",
      "id": "filter_heading",
      "label": "Filter heading",
      "default": "Filter"
    },
    {
      "type": "text",
      "id": "filter_button_label",
      "label": "Filter button label",
      "default": "Filters"
    },
    {
      "type": "text",
      "id": "filter_apply_label",
      "label": "Apply button label",
      "default": "Apply"
    },
    {
      "type": "text",
      "id": "filter_clear_label",
      "label": "Clear filters label",
      "default": "Reset"
    },
    {
      "type": "text",
      "id": "filter_price_from_label",
      "label": "Price from label",
      "default": "Min"
    },
    {
      "type": "text",
      "id": "filter_price_to_label",
      "label": "Price to label",
      "default": "Max"
    },
    {
      "type": "text",
      "id": "sort_label",
      "label": "Sort label",
      "default": "Sort by"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Collection"
    }
  ]
}
{% endschema %}
