<footer class="site-footer">
  <div class="site-footer__inner">
    <div class="site-footer__brand">
      <a class="site-footer__logo" href="{{ routes.root_url }}">{{ section.settings.brand_title | default: shop.name | escape }}</a>
      <p>{{ section.settings.brand_message | escape }}</p>
      {% if section.settings.show_newsletter %}
        {% form 'customer', class: 'site-footer__newsletter' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <label class="visually-hidden" for="FooterNewsletterEmail-{{ section.id }}">{{ 'newsletter.label' | t }}</label>
          <div class="site-footer__newsletter-fields">
            <input
              id="FooterNewsletterEmail-{{ section.id }}"
              type="email"
              name="contact[email]"
              autocomplete="email"
              placeholder="{{ section.settings.newsletter_placeholder | escape }}"
              required
            >
            <button type="submit">{{ section.settings.newsletter_button_text | escape }}</button>
          </div>
          {% if form.posted_successfully? %}
            <p class="site-footer__newsletter-response" role="status">{{ 'newsletter.success' | t }}</p>
          {% elsif form.errors %}
            <p class="site-footer__newsletter-response" role="alert">{{ form.errors.translated_fields['email'] | default: form.errors.messages['email'] }}</p>
          {% endif %}
        {% endform %}
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="site-footer__social">
          {% for block in section.blocks %}
            {% if block.type == 'social_link' %}
              <a href="{{ block.settings.url }}" aria-label="{{ block.settings.label | escape }}" target="_blank" rel="noopener">
                <span>{{ block.settings.label | escape }}</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="site-footer__menus">
      <div class="site-footer__menu">
        {% if section.settings.menu_primary != blank and linklists[section.settings.menu_primary] %}
          <h3>{{ linklists[section.settings.menu_primary].title }}</h3>
          <ul>
            {% for link in linklists[section.settings.menu_primary].links %}
              <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <div class="site-footer__menu">
        {% if section.settings.menu_secondary != blank and linklists[section.settings.menu_secondary] %}
          <h3>{{ linklists[section.settings.menu_secondary].title }}</h3>
          <ul>
            {% for link in linklists[section.settings.menu_secondary].links %}
              <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <div class="site-footer__menu">
        {% if section.settings.menu_support != blank and linklists[section.settings.menu_support] %}
          <h3>{{ linklists[section.settings.menu_support].title }}</h3>
          <ul>
            {% for link in linklists[section.settings.menu_support].links %}
              <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="site-footer__bottom">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}</p>
    <div class="site-footer__payments">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #111;
    color: #f5f5f5;
    padding: 3rem var(--page-margin) 1.5rem;
  }
  .site-footer__inner {
    display: grid;
    gap: 2.5rem;
  }
  .site-footer__brand {
    display: grid;
    gap: 1.25rem;
  }
  .site-footer__logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: inherit;
    text-decoration: none;
  }
  .site-footer__newsletter-fields {
    display: flex;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.08);
    padding: 0.5rem;
    border-radius: 999px;
  }
  .site-footer__newsletter input {
    flex: 1;
    border: none;
    background: transparent;
    color: inherit;
    padding: 0.5rem 0.75rem;
  }
  .site-footer__newsletter button {
    border: none;
    padding: 0.6rem 1.5rem;
    border-radius: 999px;
    background: #f5f5f5;
    color: #111;
    font-weight: 600;
  }
  .site-footer__newsletter-response {
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }
  .site-footer__social {
    display: flex;
    gap: 0.75rem;
  }
  .site-footer__social a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
  }
  .site-footer__menus {
    display: grid;
    gap: 1.5rem;
  }
  .site-footer__menu h3 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }
  .site-footer__menu ul {
    list-style: none;
    display: grid;
    gap: 0.5rem;
    padding: 0;
  }
  .site-footer__menu a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 0.95rem;
  }
  .site-footer__bottom {
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .site-footer__payments {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .site-footer__inner {
      grid-template-columns: 1.2fr 1fr;
      align-items: start;
    }
    .site-footer__menus {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    .site-footer__bottom {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_title",
      "label": "Brand heading",
      "default": "NOWI Denim Co."
    },
    {
      "type": "textarea",
      "id": "brand_message",
      "label": "Brand message",
      "default": "Premium denim made for everyday comfort. Discover fits you will live in."
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter sign up",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Newsletter placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Newsletter button text",
      "default": "Join"
    },
    {
      "type": "link_list",
      "id": "menu_primary",
      "label": "Primary menu"
    },
    {
      "type": "link_list",
      "id": "menu_secondary",
      "label": "Secondary menu"
    },
    {
      "type": "link_list",
      "id": "menu_support",
      "label": "Support menu"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "All rights reserved."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Instagram"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "social_link"
        },
        {
          "type": "social_link"
        }
      ]
    }
  ]
}
{% endschema %}
