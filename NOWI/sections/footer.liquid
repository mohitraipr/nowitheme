<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-grid">
      <div>
        <h2 class="footer-heading">{{ section.settings.about_heading | escape }}</h2>
        <p class="footer-text">{{ section.settings.about_text | escape }}</p>
        {% if section.settings.about_link_label != blank and section.settings.about_link_url != blank %}
          <a class="btn btn-outline" href="{{ section.settings.about_link_url }}">{{ section.settings.about_link_label | escape }}</a>
        {% endif %}
      </div>

      {% if section.settings.shop_menu != blank %}
        <div>
          <h2 class="footer-heading">{{ section.settings.shop_heading | escape }}</h2>
          <nav class="footer-links" aria-label="{{ section.settings.shop_heading | escape }}">
            {% for link in linklists[section.settings.shop_menu].links %}
              <a href="{{ link.url }}">{{ link.title | escape }}</a>
            {% endfor %}
          </nav>
        </div>
      {% endif %}

      {% if section.settings.help_menu != blank %}
        <div>
          <h2 class="footer-heading">{{ section.settings.help_heading | escape }}</h2>
          <nav class="footer-links" aria-label="{{ section.settings.help_heading | escape }}">
            {% for link in linklists[section.settings.help_menu].links %}
              <a href="{{ link.url }}">{{ link.title | escape }}</a>
            {% endfor %}
          </nav>
        </div>
      {% endif %}

      <div>
        <div class="footer-newsletter">
          <h2 class="footer-heading">{{ section.settings.newsletter_heading | escape }}</h2>
          <p class="footer-text">{{ section.settings.newsletter_text | escape }}</p>
          {% form 'customer', class: 'footer-newsletter__form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer-newsletter__fields">
              <label class="visually-hidden" for="FooterEmail">{{ 'newsletter.label' | t }}</label>
              <input id="FooterEmail" type="email" name="contact[email]" required placeholder="{{ section.settings.newsletter_placeholder | escape }}">
              <button type="submit" class="btn btn-primary">{{ section.settings.newsletter_button | escape }}</button>
            </div>
            {% if form.posted_successfully? %}
              <p class="form-success" role="status">{{ 'newsletter.success' | t }}</p>
            {% elsif form.errors %}
              <p class="form-error" role="alert">{{ form.errors | default_errors }}</p>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>

    {% if section.blocks.size > 0 %}
      <div class="footer-social" aria-label="{{ 'general.social' | t }}">
        {% for block in section.blocks %}
          <a href="{{ block.settings.url }}" target="_blank" rel="noopener" class="footer-social__link">
            <span aria-hidden="true">{{ block.settings.icon | escape }}</span>
            <span class="visually-hidden">{{ block.settings.label | escape }}</span>
          </a>
        {% endfor %}
      </div>
    {% endif %}

    <div class="footer-bottom">
      <div>{{ section.settings.bottom_text | escape }}</div>
      <div>&copy; {{ 'now' | date: '%Y' }} {{ shop.name | escape }}. {{ section.settings.rights_text | escape }}</div>
    </div>
  </div>
</footer>

<style>
  .footer-text {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .footer-newsletter__fields {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  .footer-social__link {
    display: inline-flex;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    align-items: center;
    justify-content: center;
  }

  .footer-social__link:hover,
  .footer-social__link:focus {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .form-success {
    color: var(--color-success);
    font-size: var(--font-size-sm);
  }

  .form-error {
    color: #ef4444;
    font-size: var(--font-size-sm);
  }

  @media (min-width: 600px) {
    .footer-newsletter__fields {
      flex-direction: row;
      gap: var(--space-12);
    }

    .footer-newsletter__fields input {
      flex: 1;
    }
  }
</style>

