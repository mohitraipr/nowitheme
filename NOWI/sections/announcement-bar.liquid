{% if section.settings.enable_bar and section.settings.text != blank %}
  <section class="announcement-bar" style="--announcement-bg: {{ section.settings.background | color_to_rgb | join: ',' }}; --announcement-text: {{ section.settings.text_color | color_to_rgb | join: ',' }};">
    <div class="announcement-bar__inner" role="status">
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">{{ section.settings.text | escape }}</a>
      {% else %}
        <span>{{ section.settings.text | escape }}</span>
      {% endif %}
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Message",
      "default": "Free shipping on all orders above â‚¹999"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background color",
      "default": "#0f172a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement bar"
    }
  ]
}
{% endschema %}
