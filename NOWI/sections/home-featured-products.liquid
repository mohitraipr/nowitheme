{% assign featured_collection = collections[section.settings.collection] %}

<section class="section section--featured-products">
  <div class="container">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <div class="section-heading">{{ section.settings.heading | escape }}</div>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="section-subheading">{{ section.settings.subheading | escape }}</p>
      {% endif %}
    </div>

    <div class="collection-grid-products">
      {% if featured_collection and featured_collection.products_count > 0 %}
        {% assign limit = section.settings.product_limit | default: 8 %}
        {% for product in featured_collection.products | limit: limit %}
          {% render 'product-card', product: product %}
        {% endfor %}
      {% else %}
        {% for i in (1..4) %}
          <article class="product-card">
            <div class="product-card__media">
              {{ 'product-' | append: i | placeholder_svg_tag }}
            </div>
            <div class="product-card__content">
              <div class="product-card__title">Sample Product {{ i }}</div>
              <div class="product-card__price">â‚¹{{ 4999 | times: i }}</div>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.view_all_label != blank and featured_collection %}
      <div class="section-cta">
        <a class="btn btn-outline" href="{{ featured_collection.url }}">{{ section.settings.view_all_label | escape }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New arrivals"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Latest silhouettes just dropped for your rotation."
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Products to show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View all button label",
      "default": "View collection"
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}
