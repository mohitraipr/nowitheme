<section class="home-featured-products">
  <div class="home-section-heading">
    {% if section.settings.subheading != blank %}
      <p class="home-section-eyebrow">{{ section.settings.subheading | escape }}</p>
    {% endif %}
    <div class="home-section-heading__row">
      <h2>{{ section.settings.heading | escape }}</h2>
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a class="home-section-heading__cta" href="{{ section.settings.button_link }}">{{ section.settings.button_label | escape }}</a>
      {% endif %}
    </div>
    {% if section.settings.body != blank %}
      <p class="home-section-body">{{ section.settings.body | escape }}</p>
    {% endif %}
  </div>

  <div class="home-featured-products__grid">
    {% assign featured_collection = section.settings.collection %}
    {% assign limit = section.settings.products_to_show %}
    {% if featured_collection != blank %}
      {% for product in featured_collection.products | limit: limit %}
        {% render 'product-card', card_product: product %}
      {% else %}
        <p>{{ 'collections.general.no_matches' | t }}</p>
      {% endfor %}
    {% else %}
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'featured_product' and block.settings.product %}
            <div {{ block.shopify_attributes }}>{% render 'product-card', card_product: block.settings.product %}</div>
          {% endif %}
        {% endfor %}
      {% else %}
        <p>{{ 'collections.general.no_matches' | t }}</p>
      {% endif %}
    {% endif %}
  </div>
</section>

<style>
  .home-featured-products {
    padding: 3rem var(--page-margin);
    display: grid;
    gap: 2rem;
  }
  .home-featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.25rem;
  }
  .home-featured-products__grid > div {
    display: contents;
  }

  @media (min-width: 768px) {
    .home-featured-products__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
  @media (min-width: 1100px) {
    .home-featured-products__grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }
</style>

{% schema %}
{
  "name": "Featured products",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Eyebrow text",
      "default": "Bestsellers"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The denim everyone is talking about"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Supporting text",
      "default": "High-performing silhouettes designed to flatter every body."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "default": 8,
      "min": 2,
      "max": 12,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop all bestsellers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "featured_product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Featured products",
      "blocks": [
        { "type": "featured_product" },
        { "type": "featured_product" },
        { "type": "featured_product" },
        { "type": "featured_product" }
      ]
    }
  ]
}
{% endschema %}
