<section class="home-trust">
  {% if section.settings.heading != blank %}
    <h2 class="home-trust__heading">{{ section.settings.heading | escape }}</h2>
  {% endif %}
  <div class="home-trust__grid">
    {% for block in section.blocks %}
      <div class="home-trust__badge" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <span class="home-trust__icon">{{ block.settings.icon }}</span>
        {% endif %}
        <div class="home-trust__content">
          <p class="home-trust__title">{{ block.settings.title | escape }}</p>
          {% if block.settings.text != blank %}
            <p class="home-trust__text">{{ block.settings.text | escape }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .home-trust {
    padding: 2.5rem var(--page-margin);
    display: grid;
    gap: 1.5rem;
    text-align: center;
    background: #fafafa;
    border-radius: 2rem;
    margin: 0 var(--page-margin);
  }
  .home-trust__grid {
    display: grid;
    gap: 1.5rem;
  }
  .home-trust__badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  .home-trust__icon {
    font-size: 2rem;
  }
  .home-trust__title {
    font-weight: 600;
  }
  .home-trust__text {
    font-size: 0.95rem;
    color: rgba(17, 17, 17, 0.7);
  }

  @media (min-width: 768px) {
    .home-trust__grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
    .home-trust {
      text-align: left;
    }
    .home-trust__badge {
      flex-direction: row;
      text-align: left;
      justify-content: center;
    }
    .home-trust__icon {
      margin-right: 0.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "Trust badges",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why shoppers choose NOWI"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji or SVG)",
          "default": "âœ“"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "7-day easy returns"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Free doorstep pick-up for exchanges"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Trust badges",
      "blocks": [
        { "type": "badge" },
        { "type": "badge" },
        { "type": "badge" },
        { "type": "badge" }
      ]
    }
  ]
}
{% endschema %}
