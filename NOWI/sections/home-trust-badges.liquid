<section class="section section--trust">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-heading">{{ section.settings.heading | escape }}</div>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="section-subheading">{{ section.settings.subheading | escape }}</p>
    {% endif %}
    {% render 'trust-badges', badges: section.blocks %}
  </div>
</section>

{% schema %}
{
  "name": "Trust badges",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why NOWI"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Everything we make is built to move, breathe and stand the test of time."
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon",
          "default": "üõ°Ô∏è"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "7-day easy returns"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Quick refunds or exchanges, no questions asked."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Trust badges",
      "blocks": [
        { "type": "badge" },
        { "type": "badge" },
        { "type": "badge" }
      ]
    }
  ]
}
{% endschema %}
