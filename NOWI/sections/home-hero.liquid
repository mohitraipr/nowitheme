<section class="home-hero full-width">
  {% if section.settings.image != blank %}
    <picture class="home-hero__media">
      {% if section.settings.image_mobile != blank %}
        <source media="(max-width: 749px)" srcset="{{ section.settings.image_mobile | image_url: width: 900 }}">
      {% endif %}
      <img src="{{ section.settings.image | image_url: width: 1600 }}" alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}" loading="lazy">
    </picture>
  {% endif %}
  <div class="home-hero__overlay"></div>
  <div class="home-hero__content">
    {% if section.settings.subheading != blank %}
      <p class="home-hero__eyebrow">{{ section.settings.subheading | escape }}</p>
    {% endif %}
    <h1 class="home-hero__heading">{{ section.settings.heading | escape }}</h1>
    {% if section.settings.body != blank %}
      <p class="home-hero__body">{{ section.settings.body | escape }}</p>
    {% endif %}
    <div class="home-hero__actions">
      {% if section.settings.primary_button_label != blank and section.settings.primary_button_link != blank %}
        <a class="home-hero__button home-hero__button--primary" href="{{ section.settings.primary_button_link }}">{{ section.settings.primary_button_label | escape }}</a>
      {% endif %}
      {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_link != blank %}
        <a class="home-hero__button" href="{{ section.settings.secondary_button_link }}">{{ section.settings.secondary_button_label | escape }}</a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .home-hero {
    position: relative;
    min-height: 70svh;
    display: grid;
    place-items: center;
    text-align: center;
    color: #fff;
    overflow: hidden;
  }
  .home-hero__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  .home-hero__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .home-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.6));
  }
  .home-hero__content {
    position: relative;
    padding: 4rem var(--page-margin);
    max-width: 36rem;
    display: grid;
    gap: 1rem;
  }
  .home-hero__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
  }
  .home-hero__heading {
    font-size: clamp(2.25rem, 7vw, 3.75rem);
    line-height: 1.1;
    font-weight: 700;
  }
  .home-hero__body {
    font-size: 1rem;
  }
  .home-hero__actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
  }
  .home-hero__button {
    padding: 0.85rem 2.5rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    color: inherit;
    text-decoration: none;
    font-weight: 600;
    backdrop-filter: blur(4px);
  }
  .home-hero__button--primary {
    background: #fff;
    color: #111;
    border-color: #fff;
  }

  @media (min-width: 768px) {
    .home-hero__actions {
      flex-direction: row;
    }
  }
</style>

{% schema %}
{
  "name": "Home hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Eyebrow text",
      "default": "New arrivals"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Denim designed to move with you"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body copy",
      "default": "Experience sculpting fits, breathable fabrics, and styles that keep up with every day."
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Shop new arrivals"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "View lookbook"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Home hero"
    }
  ]
}
{% endschema %}
