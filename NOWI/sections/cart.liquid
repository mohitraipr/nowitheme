<section class="cart-page">
  <div class="container">
    <h1 class="section-heading">{{ 'cart.title' | t }}</h1>
    {% if cart.item_count == 0 %}
      <div class="cart-empty card">
        <p>{{ 'cart.general.empty' | t }}</p>
        <a class="btn btn-primary" href="{{ section.settings.empty_cta_link | default: routes.all_products_collection_url }}">{{ section.settings.empty_cta_label | escape }}</a>
      </div>
    {% else %}
      {% form 'cart', cart %}
        <div class="cart-page__grid">
          <div class="cart-page__items">
            {% for item in cart.items %}
              <article class="cart-line card" {{ item.shopify_attributes }}>
                <a href="{{ item.url }}">
                  {% if item.image %}
                    {{ item.image | image_url: width: 320 | image_tag: loading: 'lazy', alt: item.product.title }}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag }}
                  {% endif %}
                </a>
                <div class="cart-line__meta">
                  <div>
                    <a href="{{ item.url }}"><strong>{{ item.product.title | escape }}</strong></a>
                    {% if item.product.has_only_default_variant == false %}
                      <div class="cart-line__variant">{{ item.variant.title | escape }}</div>
                    {% endif %}
                    {% if item.selling_plan_allocation %}
                      <div class="cart-line__plan">{{ item.selling_plan_allocation.selling_plan.name }}</div>
                    {% endif %}
                  </div>
                  <div class="quantity">
                    <label class="visually-hidden" for="updates_{{ item.key }}">{{ 'cart.general.quantity' | t }}</label>
                    <input id="updates_{{ item.key }}" name="updates[{{ item.key }}]" value="{{ item.quantity }}" type="number" min="0">
                    <button class="btn btn-outline" type="submit" name="update">{{ 'cart.general.update' | t }}</button>
                  </div>
                  <div class="cart-line__price">{{ item.final_line_price | money }}</div>
                  <a class="cart-line__remove" href="{{ item.url_to_remove }}">{{ 'cart.general.remove' | t }}</a>
                </div>
              </article>
            {% endfor %}
          </div>
          <aside class="cart-summary">
            <h2 class="section-heading cart-summary__title">{{ section.settings.summary_heading | escape }}</h2>
            <div class="cart-summary__rows">
              <div class="cart-drawer__subtotal">
                <span>{{ 'cart.general.subtotal' | t }}</span>
                <strong>{{ cart.total_price | money }}</strong>
              </div>
              <p class="cart-summary__note">{{ section.settings.summary_note | escape }}</p>
              {% if section.settings.enable_order_note %}
                <label for="CartNote">{{ section.settings.order_note_label | escape }}</label>
                <textarea id="CartNote" name="note" rows="3">{{ cart.note }}</textarea>
              {% endif %}
            </div>
            <button type="submit" name="checkout" class="btn btn-primary">{{ 'cart.general.checkout' | t }}</button>
            <a class="btn btn-outline" href="{{ section.settings.continue_shopping_link | default: routes.all_products_collection_url }}">{{ section.settings.continue_shopping_label | escape }}</a>
          </aside>
        </div>
      {% endform %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Cart",
  "settings": [
    {
      "type": "text",
      "id": "empty_cta_label",
      "label": "Empty cart CTA label",
      "default": "Shop new arrivals"
    },
    {
      "type": "url",
      "id": "empty_cta_link",
      "label": "Empty cart CTA link"
    },
    {
      "type": "text",
      "id": "summary_heading",
      "label": "Summary heading",
      "default": "Order summary"
    },
    {
      "type": "textarea",
      "id": "summary_note",
      "label": "Summary note",
      "default": "Shipping and taxes calculated at checkout."
    },
    {
      "type": "checkbox",
      "id": "enable_order_note",
      "label": "Enable order note",
      "default": false
    },
    {
      "type": "text",
      "id": "order_note_label",
      "label": "Order note label",
      "default": "Add order note"
    },
    {
      "type": "text",
      "id": "continue_shopping_label",
      "label": "Continue shopping label",
      "default": "Continue shopping"
    },
    {
      "type": "url",
      "id": "continue_shopping_link",
      "label": "Continue shopping link"
    }
  ],
  "presets": [
    {
      "name": "Cart"
    }
  ]
}
{% endschema %}
