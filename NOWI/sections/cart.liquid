<section class="cart">
  <h1 class="cart__heading">{{ 'cart.title' | t }}</h1>

  {% if cart.item_count == 0 %}
    <div class="cart__empty">
      <p>{{ 'cart.general.empty' | t }}</p>
      <a class="button" href="{{ section.settings.empty_cta_link | default: routes.all_products_collection_url }}">{{ section.settings.empty_cta_label | escape }}</a>
    </div>
  {% else %}
    {% form 'cart', cart %}
      <div class="cart__layout">
        <div class="cart__items">
          {% for item in cart.items %}
            <article class="cart-item" data-cart-item>
              <a class="cart-item__media" href="{{ item.url }}" aria-label="{{ item.product.title | escape }}">
                {% if item.image %}
                  <img src="{{ item.image | image_url: width: 300 }}" alt="{{ item.image.alt | default: item.product.title | escape }}" loading="lazy">
                {% endif %}
              </a>
              <div class="cart-item__details">
                <div class="cart-item__top">
                  <h2 class="cart-item__title"><a href="{{ item.url }}">{{ item.product.title | escape }}</a></h2>
                  <a class="cart-item__remove" href="{{ item.url_to_remove }}">{{ 'cart.general.remove' | t }}</a>
                </div>
                {% if item.product.has_only_default_variant == false %}
                  <ul class="cart-item__options">
                    {% for option in item.options_with_values %}
                      <li>{{ option.name | escape }}: {{ option.value | escape }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
                {% if item.selling_plan_allocation %}
                  <p class="cart-item__selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                {% endif %}
                <div class="cart-item__bottom">
                  <div class="cart-item__quantity">
                    <label class="visually-hidden" for="updates_{{ item.key }}">{{ 'cart.general.quantity' | t }}</label>
                    <input id="updates_{{ item.key }}" name="updates[{{ item.key }}]" value="{{ item.quantity }}" type="number" min="0">
                    <button type="submit" class="cart-item__update" name="update">{{ 'cart.general.update' | t }}</button>
                  </div>
                  <div class="cart-item__price">
                    <span>{{ item.final_line_price | money }}</span>
                    {% if item.original_line_price != item.final_line_price %}
                      <span class="cart-item__compare">{{ item.original_line_price | money }}</span>
                    {% endif %}
                  </div>
                </div>
              </div>
            </article>
          {% endfor %}
        </div>
        <aside class="cart__summary">
          <h2>{{ section.settings.summary_heading | escape }}</h2>
          <div class="cart__subtotal">
            <span>{{ 'cart.general.subtotal' | t }}</span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          <p class="cart__note">{{ section.settings.summary_note | escape }}</p>
          {% if section.settings.enable_order_note %}
            <label for="CartNote">{{ section.settings.order_note_label | escape }}</label>
            <textarea id="CartNote" name="note" rows="3">{{ cart.note }}</textarea>
          {% endif %}
          <button type="submit" name="checkout" class="cart__checkout">{{ 'cart.general.checkout' | t }}</button>
          <a class="cart__continue" href="{{ section.settings.continue_shopping_link | default: routes.all_products_collection_url }}">{{ section.settings.continue_shopping_label | escape }}</a>
        </aside>
      </div>
    {% endform %}
  {% endif %}
</section>

<style>
  .cart {
    padding: 3rem var(--page-margin);
    display: grid;
    gap: 2rem;
  }
  .cart__heading {
    font-size: 2rem;
  }
  .cart__empty {
    display: grid;
    gap: 1rem;
  }
  .cart__empty .button {
    justify-self: start;
    padding: 0.85rem 2rem;
    border-radius: 999px;
    background: #111;
    color: #fff;
    text-decoration: none;
    font-weight: 600;
  }
  .cart__layout {
    display: grid;
    gap: 2rem;
  }
  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }
  .cart-item__media img {
    width: 100%;
    border-radius: 0.75rem;
  }
  .cart-item__title a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }
  .cart-item__remove {
    text-decoration: underline;
    font-size: 0.85rem;
    color: rgba(17, 17, 17, 0.6);
  }
  .cart-item__options {
    list-style: none;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    font-size: 0.9rem;
    margin: 0.5rem 0;
    padding: 0;
  }
  .cart-item__selling-plan {
    font-size: 0.85rem;
    color: rgba(17, 17, 17, 0.6);
  }
  .cart-item__quantity {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .cart-item__quantity input {
    width: 3.5rem;
    padding: 0.35rem;
    border-radius: 0.5rem;
    border: 1px solid rgba(0, 0, 0, 0.15);
  }
  .cart-item__update {
    border: none;
    background: none;
    color: #111;
    font-weight: 600;
  }
  .cart-item__price {
    display: grid;
    justify-items: end;
    gap: 0.25rem;
    font-weight: 600;
  }
  .cart-item__compare {
    text-decoration: line-through;
    font-size: 0.9rem;
    color: rgba(17, 17, 17, 0.6);
  }
  .cart__summary {
    background: #f8f8f8;
    padding: 1.5rem;
    border-radius: 1.5rem;
    display: grid;
    gap: 1rem;
  }
  .cart__summary h2 {
    font-size: 1.25rem;
  }
  .cart__subtotal {
    display: flex;
    justify-content: space-between;
    font-weight: 600;
  }
  .cart__note {
    font-size: 0.9rem;
    color: rgba(17, 17, 17, 0.7);
  }
  .cart__summary textarea {
    resize: vertical;
    padding: 0.75rem;
    border-radius: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
  .cart__checkout {
    padding: 0.85rem 1rem;
    border: none;
    border-radius: 999px;
    background: #111;
    color: #fff;
    font-weight: 600;
    cursor: pointer;
  }
  .cart__continue {
    text-align: center;
    text-decoration: underline;
    color: inherit;
  }

  @media (min-width: 1024px) {
    .cart__layout {
      grid-template-columns: 2fr 1fr;
      align-items: start;
    }
  }
</style>

{% schema %}
{
  "name": "Cart",
  "settings": [
    {
      "type": "text",
      "id": "empty_cta_label",
      "label": "Empty cart button label",
      "default": "Shop new arrivals"
    },
    {
      "type": "url",
      "id": "empty_cta_link",
      "label": "Empty cart button link"
    },
    {
      "type": "text",
      "id": "summary_heading",
      "label": "Summary heading",
      "default": "Order summary"
    },
    {
      "type": "textarea",
      "id": "summary_note",
      "label": "Summary note",
      "default": "Shipping and taxes calculated at checkout."
    },
    {
      "type": "checkbox",
      "id": "enable_order_note",
      "label": "Enable order notes",
      "default": true
    },
    {
      "type": "text",
      "id": "order_note_label",
      "label": "Order note label",
      "default": "Add a note for our team"
    },
    {
      "type": "text",
      "id": "continue_shopping_label",
      "label": "Continue shopping label",
      "default": "Continue shopping"
    },
    {
      "type": "url",
      "id": "continue_shopping_link",
      "label": "Continue shopping link"
    }
  ]
}
{% endschema %}
