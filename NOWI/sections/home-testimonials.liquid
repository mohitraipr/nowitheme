<section class="section section--testimonials">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-heading">{{ section.settings.heading | escape }}</div>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="section-subheading">{{ section.settings.subheading | escape }}</p>
    {% endif %}

    <div class="testimonial-grid">
      {% for block in section.blocks %}
        <article class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-card__rating" aria-label="{{ block.settings.rating }} out of 5">
            {% for star in (1..block.settings.rating) %}
              <span aria-hidden="true">★</span>
            {% endfor %}
          </div>
          <p class="testimonial-card__quote">{{ block.settings.quote | escape }}</p>
          <div class="testimonial-card__author">
            <strong>{{ block.settings.author | escape }}</strong>
            {% if block.settings.meta != blank %}
              <span class="testimonial-card__meta">{{ block.settings.meta | escape }}</span>
            {% endif %}
          </div>
        </article>
      {% else %}
        {% for i in (1..3) %}
          <article class="testimonial-card">
            <div class="testimonial-card__rating" aria-hidden="true">★ ★ ★ ★ ★</div>
            <p class="testimonial-card__quote">“The fits are unreal – comfortable, sculpting and built for daily hustle.”</p>
            <div class="testimonial-card__author"><strong>Avantika</strong> <span class="testimonial-card__meta">Mumbai</span></div>
          </article>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Loved by the community"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Verified reviews from athletes, creatives and culture leaders."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Name",
          "default": "Rohan"
        },
        {
          "type": "text",
          "id": "meta",
          "label": "Meta",
          "default": "Bengaluru, India"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Performance denim that looks luxe and feels like second skin."
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
