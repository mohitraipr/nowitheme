<section class="section section--offer">
  <div class="container">
    <div class="offer-strip">
      {% if section.settings.heading != blank %}
        <div class="offer-strip__heading">{{ section.settings.heading | escape }}</div>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="offer-strip__text">{{ section.settings.subheading | escape }}</p>
      {% endif %}
      {% if section.settings.cta_label != blank %}
        <a class="btn btn-primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label | escape }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Offer strip",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bundle and save"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Buy 2 or more essentials and unlock 10% off automatically at checkout."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "Shop bundles"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    }
  ],
  "presets": [
    {
      "name": "Offer strip"
    }
  ]
}
{% endschema %}
