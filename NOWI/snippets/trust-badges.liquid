{% liquid
  assign items = badges
  if items == blank and badge_items != blank
    assign items = badge_items
  endif
%}

{% if items and items.size > 0 %}
  <div class="trust-badges" role="list">
    {% for badge in items %}
      {% if badge.settings %}
        {% assign icon = badge.settings.icon %}
        {% assign title = badge.settings.title %}
        {% assign text = badge.settings.text %}
      {% else %}
        {% assign icon = badge.icon %}
        {% assign title = badge.title %}
        {% assign text = badge.text %}
      {% endif %}
      <div class="trust-badge" role="listitem">
        {% if icon != blank %}
          <div class="trust-badge__icon" aria-hidden="true">{{ icon }}</div>
        {% endif %}
        {% if title != blank %}
          <div class="trust-badge__title">{{ title }}</div>
        {% endif %}
        {% if text != blank %}
          <p class="trust-badge__text">{{ text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% endif %}
