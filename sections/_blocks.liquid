{% comment %}
  Generic container section for AI generated content blocks.
  Renders blocks stored in the /blocks directory so they can be managed from JSON templates.
{% endcomment %}

<section class="nowi-ai-blocks" data-section-id="{{ section.id }}" {{ section.shopify_attributes }}>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% render block %}
    {% endfor %}
  {% else %}
    <div class="nowi-ai-blocks__empty">
      <h2 class="nowi-ai-blocks__empty-title">{{ 'nowi.blocks.empty_title' | t | default: 'No blocks added yet' }}</h2>
      <p class="nowi-ai-blocks__empty-text">
        {{ 'nowi.blocks.empty_text' | t | default: 'Use the theme editor to add one of the available content blocks.' }}
      </p>
    </div>
  {% endif %}
</section>

{% style %}
  .nowi-ai-blocks {
    display: flex;
    flex-direction: column;
    gap: var(--nowi-ai-blocks-gap, 0);
  }

  .nowi-ai-blocks__empty {
    margin: 0 auto;
    padding: 3rem 1.5rem;
    max-width: 52rem;
    text-align: center;
    border: 1px dashed rgba(16, 57, 72, 0.35);
    border-radius: 1.25rem;
    background: rgba(16, 57, 72, 0.04);
    color: #103948;
  }

  .nowi-ai-blocks__empty-title {
    margin: 0 0 0.75rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .nowi-ai-blocks__empty-text {
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(16, 57, 72, 0.75);
  }
{% endstyle %}

